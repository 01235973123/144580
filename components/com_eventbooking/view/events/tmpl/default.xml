<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="Manage Events">
		<message>
			Display list Of events which are submitted by the current logged in user
		</message>
	</layout>
	<fields name="params">
		<fieldset name="basic">
			<field name="menu_filter_order" type="list" default="tbl.event_date" label="Default Order By">
				<option value="tbl.title">Event Title</option>
				<option value="tbl.event_date">Event Date</option>
				<option value="tbl.ordering">Ordering</option>
			</field>
			<field name="menu_filter_order_dir" type="list" default="DESC" label="Default Order Direction"
				   description="Choose order direction for events displayed by this menu item.">
				<option value="ASC">ASC</option>
				<option value="DESC">DESC</option>
			</field>
			<field type="editor" name="intro_text" buttons="yes" filter="raw" label="Intro Text" description="Enter the text you want to be displayed at the top of manage registrants page" />
		</fieldset>
		<fieldset name="display" label="Display Settings">
			<field name="show_category_column" type="list"
				   label="Show Category Column"
				   default="1">
				<option value="1">Yes</option>
				<option value="0">No</option>
			</field>
			<field name="show_event_date_column" type="list"
				   label="Show Event Date Column"
				   default="1">
				<option value="1">Yes</option>
				<option value="0">No</option>
			</field>
			<field name="show_number_registrants_column" type="list"
				   label="Show Number Registrants Column"
				   default="1">
				<option value="1">Yes</option>
				<option value="0">No</option>
			</field>
			<field name="show_status_column" type="list"
				   label="Show Status Column"
				   default="1">
				<option value="1">Yes</option>
				<option value="0">No</option>
			</field>
			<field name="show_id_column" type="list"
				   label="Show ID Column"
				   default="1">
				<option value="1">Yes</option>
				<option value="0">No</option>
			</field>
		</fieldset>
	</fields>
</metadata>
<?xml version="1.0" encoding="utf-8"?>
<extension version="1.6.0" type="plugin" group="system" method="upgrade">
	<name>Eshop Detect Currency</name>
	<creationDate>March 2021</creationDate>
	<author>Giang Dinh Truong</author>
	<authorEmail>contact@joomdonation.com</authorEmail>
	<authorUrl>http://www.joomdonation.com</authorUrl>
	<copyright>Copyright (C) 2012 Ossolution Team</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<version>4.0.2</version>
	<description>This plugin to detect currency for your shop.</description>
	<files>
		<filename plugin="eshopdetectcurrency">eshopdetectcurrency.php</filename>
		<filename>index.html</filename>
	</files>	
	<config>
		<fields name="params" addfieldpath="/administrator/components/com_eshop/elements/">
			<fieldset name="basic" addfieldpath="/administrator/components/com_eshop/elements">
				<field name="default_currency" type="eshopcurrency" label="Default Currency" description="If customer currency is not available, then it will be set to default currency."></field>
			</fieldset>
		</fields>
	</config>
</extension>
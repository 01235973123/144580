<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5.0" type="plugin" group="content" method="upgrade">
    <name>Eshop Product content plugin</name>
    <author>Ossolution Team</author>
    <creationDate>Feb 2011</creationDate>
    <copyright>Copyright (C) 2010 Ossolution Team</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <authorEmail>contact@joomdonation.com</authorEmail>
    <authorUrl>www.joomdonation.com</authorUrl>
    <version>4.0.2</version>
    <description>This plugin is used to display details of a specific product in a Joomla article.</description>
    <files>
        <filename plugin="eshopproduct">eshopproduct.php</filename>
        <filename>index.html</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="layout" type="list" label="Layout" description="Please choose a layout of product." default="default">
                    <option value="default">Default</option>
                    <option value="compact">Compact</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
